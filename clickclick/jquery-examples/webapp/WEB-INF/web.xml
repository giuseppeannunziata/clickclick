<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
    version="2.4">

  <!-- Listener which enables Google App Engine functionality -->
  <listener>
    <listener-class>org.apache.click.extras.gae.GoogleAppEngineListener</listener-class>
  </listener>

	<!--
	Provides an in-memory domain.
	-->
	<listener>
		<listener-class>net.sf.clickclick.examples.jquery.util.StartupListener</listener-class>
	</listener>


<filter>
    <filter-name>PerformanceFilter</filter-name>
    <filter-class>org.apache.click.extras.filter.PerformanceFilter</filter-class>
    <init-param>
        <param-name>cachable-paths</param-name>
        <param-value>/assets/*, /clickclick/*</param-value>
    </init-param>
    <init-param>
        <param-name>application-version</param-name>
        <param-value>0.1</param-value>
    </init-param>
</filter>

 <filter-mapping>
  <filter-name>PerformanceFilter</filter-name>
  <url-pattern>*.css</url-pattern>
 </filter-mapping>

 <filter-mapping>
  <filter-name>PerformanceFilter</filter-name>
  <url-pattern>*.js</url-pattern>
 </filter-mapping>

 <filter-mapping>
  <filter-name>PerformanceFilter</filter-name>
  <url-pattern>*.gif</url-pattern>
 </filter-mapping>

 <filter-mapping>
  <filter-name>PerformanceFilter</filter-name>
  <url-pattern>*.png</url-pattern>
 </filter-mapping>

 <filter-mapping>
  <filter-name>PerformanceFilter</filter-name>
  <servlet-name>ClickClickServlet</servlet-name>
 </filter-mapping>
 
	<servlet>
		<servlet-name>ClickClickServlet</servlet-name>
		<servlet-class>net.sf.clickclick.ClickClickServlet</servlet-class>
  		<load-on-startup>0</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>ClickClickServlet</servlet-name>
		<url-pattern>*.htm</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
 		<welcome-file>redirect.html</welcome-file>
	</welcome-file-list>

  
</web-app>
